<launch>
  <node type="raspicam_node" pkg="raspicam_node" name="raspicam_node" output="s$

    <param name="camera_info_url" value="package://raspicam_node/camera_info/ca$
    <param name="width" value="480"/>
    <param name="height" value="360"/>
    <!-- We are running at 30fps to reduce motion blur -->
    <param name="framerate" value="30"/>
    <param name="hFlip" value="false"/>
    <param name="vFlip" value="false"/>
	<param name="exposure_mode" value="antishake"/>
    <param name="shutter_speed" value="0"/>

    <param name="camera_frame_id" value="raspicam"/>

  </node>

</launch>

